{
  "name": "zwave-adapter",
  "display_name": "Z-Wave",
  "version": "0.6.1",
  "description": "Z-Wave adapter plugin for Mozilla IoT Gateway",
  "author": "Mozilla IoT",
  "main": "index.js",
  "scripts": {
    "lint": "eslint ."
  },
  "keywords": [
    "mozilla",
    "iot",
    "adapter",
    "zwave"
  ],
  "homepage": "https://github.com/mozilla-iot/zwave-adapter",
  "license": "MPL-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/mozilla-iot/zwave-adapter.git"
  },
  "bugs": {
    "url": "https://github.com/mozilla-iot/zwave-adapter/issues"
  },
  "dependencies": {
    "openzwave-shared": "^1.4.6",
    "serialport": "^7.0.2"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "eslint": "^5.10.0"
  },
  "files": [
    "LICENSE",
    "SHA256SUMS",
    "index.js",
    "package.json",
    "zwave-adapter.js",
    "zwave-classifier.js",
    "zwave-node.js",
    "zwave-property.js"
  ],
  "moziot": {
    "api": {
      "min": 2,
      "max": 2
    },
    "enabled": true,
    "plugin": true,
    "exec": "{nodeLoader} {path}",
    "config": {
      "networkKey": ""
    },
    "schema": {
      "type": "object",
      "properties": {
        "networkKey": {
          "type": "string",
          "description": "16-byte, comma-separated hex string (0xb4,0xc9,etc...)"
        }
      }
    }
  }
}
