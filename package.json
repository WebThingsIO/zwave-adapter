{
  "name": "zwave-adapter",
  "display_name": "Z-Wave",
  "version": "0.9.1",
  "description": "Z-Wave adapter plugin for Mozilla WebThings Gateway",
  "author": "Mozilla IoT",
  "main": "index.js",
  "scripts": {
    "lint": "eslint .",
    "jest": "jest"
  },
  "keywords": [
    "mozilla",
    "iot",
    "adapter",
    "zwave"
  ],
  "homepage": "https://github.com/mozilla-iot/zwave-adapter",
  "license": "MPL-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/mozilla-iot/zwave-adapter.git"
  },
  "bugs": {
    "url": "https://github.com/mozilla-iot/zwave-adapter/issues"
  },
  "dependencies": {
    "color": "^3.0.0",
    "openzwave-shared": "^1.5.6",
    "serialport": "^7.1.5"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.3",
    "eslint": "^6.2.2",
    "gateway-addon": "https://github.com/mozilla-iot/gateway-addon-node",
    "jest": "^24.9.0"
  },
  "files": [
    "LICENSE",
    "SHA256SUMS",
    "index.js",
    "package.json",
    "zwave-adapter.js",
    "zwave-classifier.js",
    "zwave-constants.js",
    "zwave-debug.js",
    "zwave-loader.sh",
    "zwave-node.js",
    "zwave-property.js"
  ],
  "moziot": {
    "api": {
      "min": 2,
      "max": 2
    },
    "enabled": true,
    "plugin": true,
    "exec": "{path}/zwave-loader.sh {nodeLoader} {path}",
    "config": {
      "networkKey": "",
      "debug": ""
    },
    "schema": {
      "type": "object",
      "properties": {
        "networkKey": {
          "type": "string",
          "description": "16-byte, comma-separated hex string (0xb4,0xc9,etc...)"
        },
        "debug": {
          "type": "string",
          "default": ""
        }
      }
    }
  },
  "jest": {
    "coverageDirectory": "./coverage/",
    "moduleFileExtensions": [
      "js"
    ],
    "testMatch": [
      "**/test/**/*-test.js"
    ],
    "testEnvironment": "node"
  }
}
